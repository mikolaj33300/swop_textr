user:User
TextR:TextR
facade:ControllerFacade
rootLayout:Layout
view:View

[c:while user presses ctrl+r]
  user:TextR.ctrl+r
  TextR:facade.rotateLayout(ROT_DIRECTION.COUNTERCLOCKWISE)
  facade:rootLayout.rotateRelationshipNeighbor(ROT_DIRECTION.COUNTERCLOCKWISE)
  [c:view in windows]
    facade:view.setScaledCoords()
  [/c]
[/c]
TextR:facade.needsRender()
[c:for each view in Windows]
  facade:view.render()
[/c]
[c:while user presses ctrl+t]
  user:TextR.ctrl+t
  TextR:facade.rotateLayout(ROT_DIRECTION.COUNTERCLOCKWISE)
  facade:rootLayout.rotateRelationshipNeighbor(ROT_DIRECTION.COUNTERCLOCKWISE)
  [c:view in windows]
    facade:view.setScaledCoords()
  [/c]
[/c]
TextR:facade.needsRender()
[c:for each view in Windows]
  facade:view.render()
[/c]
